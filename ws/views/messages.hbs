<h1>Messages</h1>

<iframe style="display: none;" name="dummyframe" id="dummyframe"></iframe>
<div class="row">
    <div class="col">
        <h4>Text Message</h4>
        <form action="/sendMessage" method="post" target="dummyframe"
            class="row row-cols-lg-auto g-3 align-items-center" style="margin-left: 0px;">
            <input type="hidden" name="token" value="{{token}}">
            <div class="form-group">
                <label for="channel">Channel</label>
                <select class="custom-select" name="channelid" id="channel">
                    {{#each channels}}
                    <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" name="message" id="message" rows="1"
                    placeholder="I ðŸ’• you all!"></textarea>
            </div>
            <div class="form-group">
                <label>&nbsp;</label>
                <button class="form-control" type="submit" class="btn btn-primary">Send</button>
            </div>
        </form>
    </div>
</div>
