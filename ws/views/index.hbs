<div class="row">
    <div class="col-md-12 ms-sm-auto col-lg-12 px-md-12">
        <iframe style="display: none;" name="dummyframe" id="dummyframe"></iframe>

        <form action="/sendMessage" method="post" target="dummyframe">
            <input type="hidden" name="token" value="{{token}}">
            <select name="channelid">
                {{#each channels}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
            <input type="text" name="text" placeholder="Text" />
            <input type="submit" value="Send" />
        </form>
    </div>
</div>

<div class="row">
    <div class="col">
        <h4>Modules</h4>
        <div class="list-group">
            {{#each modules}}
            <div class="list-group-item" aria-current="true">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1"><a href='#'>{{@key}}</a></h5>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" {{if this.disabled
                            true '' 'checked' }}>
                    </div>
                </div>
                <p class="mb-1">Some placeholder content in a paragraph.</p>
                <small>And some small print.</small>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="col">
        <h4>Settings</h4>
        <form>
            <div class="form-group">
                <label for="nickname">Nickname</label>
                <input type="text" class="form-control" name="nickname" id="nickname" aria-describedby="nicknamehelp"
                    placeholder="n00bster" value="n00bster">
                <small id="nicknamehelp" class="form-text text-muted">The bot's name.</small>
            </div>
            <div class="form-group">
                <label for="prefix">Prefix</label>
                <input type="text" class="form-control" name="prefix" id="prefix" aria-describedby="prefixhelp"
                    placeholder="!" value="!">
                <small id="prefixhelp" class="form-text text-muted">The prefix the bot uses, eg. !help</small>
            </div>
        </form>
    </div>
    <div class="col">...</div>
</div>
</div>